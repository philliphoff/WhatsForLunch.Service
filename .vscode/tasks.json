{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Service/Service.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Service/Service.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Service/Service.csproj"
            ],
            "options": {
                "env": {
                    "ASPNETCORE_URLS": "http://+:5050",
                    "TITAN_MENU_ENDPOINT": "https://family.titank12.com/api/",
                    "TITAN_MENU_IDENTIFIER": "LPX5UV"
                }
            },
            "problemMatcher": "$msCompile"
        }
    ]
}